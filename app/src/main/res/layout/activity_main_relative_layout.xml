<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".RelativeLayoutActivity">

        <View
            android:id="@+id/yellow_view"
            android:layout_width="@dimen/square_width"
            android:layout_height="@dimen/square_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/square_layout_margin"
            android:background="@color/dark_yellow" />

        <View
            android:id="@+id/bermuda_view"
            android:layout_width="@dimen/square_width"
            android:layout_height="@dimen/square_height"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/square_margin_left"
            android:layout_marginTop="@dimen/square_margin_top"
            android:layout_toEndOf="@id/yellow_view"
            android:background="@color/bermuda" />

        <View
            android:id="@+id/dark_bermuda_view"
            android:layout_width="@dimen/square_width"
            android:layout_height="@dimen/square_height"
            android:layout_marginTop="@dimen/square_margin_top"
            android:layout_toEndOf="@+id/bermuda_view"
            android:background="@color/bermuda_gray" />

        <View
            android:id="@+id/coral_view"
            android:layout_width="@dimen/square_width"
            android:layout_height="@dimen/square_height"
            android:layout_margin="@dimen/square_layout_margin"
            android:layout_toEndOf="@+id/dark_bermuda_view"
            android:background="@color/coral" />

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coral_view"
            android:layout_margin="@dimen/text_view_scroll_description_margin"
            android:text="@string/scroll_view_description" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_1"
            android:layout_margin="@dimen/text_view_scroll_description_margin"
            android:text="@string/scroll_view_description" />

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_2"
            android:layout_margin="@dimen/text_view_scroll_description_margin"
            android:text="@string/scroll_view_description" />

        <TextView
            android:id="@+id/text_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_3"
            android:layout_margin="@dimen/text_view_scroll_description_margin"
            android:text="@string/scroll_view_description" />

        <TextView
            android:id="@+id/text_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_4"
            android:layout_margin="@dimen/text_view_scroll_description_margin"
            android:text="@string/scroll_view_description" />

    </RelativeLayout>
</ScrollView>